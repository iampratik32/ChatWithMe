<%- include('../Layouts/header.ejs') %>

    <div class="container mt-5">
        <h3>Create New Channel For <a href="/server/<%- server.id %>"><%- server.name %> </a></h3><br>

        <form action="/server/<%- server.id %>/channel/create" method="POST">
            <input type="hidden" value="<%- server.id %>" name="id">
            <div class="row">
                <div class="col-md-2 justify-content-center align-self-center">
                    Name:
                </div>
                <div class="col-md-6">
                    <input required type="text" name="Name" class="form-control">
                </div>
            </div>
            <div class="col-md-9 text-center mt-5">
                <button type="submit" class="btn btn-success">Create Channel</button>
            </div>
        </form>

    </div>