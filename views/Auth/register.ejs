<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>
    <script src="https://use.fontawesome.com/1e4cf5ceac.js"></script>
    <title>
        <%- title %>
    </title>
</head>

<div class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Chat With Me</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                
                <li class="nav-item">
                    <a class="nav-link" aria-current="page" href="/login">Login</a>
                </li>
                <li class="nav-item" style="margin-left: 10px;">
                    <a class="nav-link" aria-current="page" href="/register">
                        <span style="margin-left: 5px;">Register</span>
                    </a>
                </li>

            </ul>
        </div>
    </div>
</div>


<div class="container">

    <% if (messages.error) { %>
        <%- messages.error %> 
    <% } %>


    <form method="POST" action="/register" class="register-form" id="register-form">
        <div class="text-center">
            <h3 class="mt-5"><a href="/">Chat With Me</a></h3>
        </div>
        <div class="container-fluid">
            <h4>Register</h4>
        </div>
        <div class="row mt-5">
            <div class="col-md-3 text-center align-middle">
                Email
            </div>
            <div class="col-md-6">
                <input required type="email" name="email" placeholder="Email Address" class="form-control">
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3 text-center align-middle">
                Your Name
            </div>
            <div class="col-md-6">
                <input required type="text" name="name" placeholder="Your Full Name" class="form-control">
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3 text-center align-middle">
                Password
            </div>
            <div class="col-md-6">
                <input required type="password" class="form-control" name="password" id="pass" placeholder="Password"/>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3 text-center align-middle">
                Confirm Password
            </div>
            <div class="col-md-6">
                <input required type="password" name="confirm" id="re_pass" class="form-control" placeholder="Repeat Your Password"/>
            </div>
        </div>
        <div class="mt-3 text-center">
            <input type="submit" name="signup" id="signup" class="btn btn-info" value="Register"/>
        </div>
        <div class="mt-4 text-center">
            <a href="/login">Already Have An Account?</a>
        </div>
    </form>

</div>
